{
  "profile": {
    "id": "xlsx-shp-workflow",
    "name": "xlsx shp workflow",
	  "project": "Geoflow project to publish Sen2Chain metadata",
	  "organization": "IRD",
	  "environment": {
        "file": "/home/sylvain/Documents/IRD/geoflow/geoflow-g2oi/.env",
        "hide_env_vars": ["*"]
        },
	  "logos": [
		  "https://gred.ird.fr/var/ird/storage/images/media/ird-sites-d-unites-de-recherche/gred/images/logos/logo-ird/209819-2-fre-FR/logo-ird.png"
	  ],
	  "mode": "entity",
	  "options": {
	    "line_separator": "_\n"
    }
  },
  "metadata": {
    "entities": [
      {
        "handler": "excel",
        "source": "https://drive.ird.fr/s/wxWDfDEsqtHWaWX/download/config_metadata_csv_shp_nextcloud.xlsx"
      }
    ],
    "contacts" : [
      {
        "handler": "csv",
        "source": "https://drive.ird.fr/s/EaJ5qJ84GJdAS5r/download/geoflow_g2oi_contacts.xlsx"
      }
    ]
  },
  "software": [
	{
		"id": "221617-geonetwork",
		"type": "output",
		"software_type": "geonetwork",
		"parameters": {
			"url": "https://gn.marbec-tools.ird.fr/geonetwork",
			"user": "{{GEONETWORK_USER}}",
			"pwd": "{{GEONETWORK_PASSWORD}}",
			"version": "4.2.0",
			"logger": "DEBUG"
		}
	},
	{
		"id": "my-geoserver",
		"type": "output",
		"software_type": "geoserver",
		"parameters": {
			"url": "https://gs.marbec-tools.ird.fr/geoserver",
			"user": "{{GEOSERVER_USER}}",
			"pwd": "{{GEOSERVER_PASSWORD}}",
			"logger": "DEBUG"
		},
		"properties" : {
			"workspace": "G2OI"
		}
	}
  ],
  "actions": [
	{
      "id": "geometa-create-iso-19115",
	  "options": {
		"logo": true
	  },
      "run": true
    },
	{
	  "id": "geonapi-publish-iso-19139",
      "run" : true,
      	     "options" : {
	   "group":"{{GROUP}}"
	   }
	},
	{
	  "id": "geosapi-publish-ogc-services",
	  "run": true,
	  "options" : {
	    "createWorkspace": true,
	    "createStore": true
	  }
	}
  ]
}

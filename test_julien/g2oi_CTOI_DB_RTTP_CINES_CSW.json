{
  "profile": {
    "id": "g2oi_CTOI_DB_RTTP_CINES_CSW",
    "name": "CTOI RTTP database metadata and data publication workflow",
	  "project": "G2OI project",
	  "organization": "CTOI & IRD",
	  "logos": [
        "https://drive.google.com/uc?id=1YgbiwX4zQ7mp7RKuZChEXhMO2sqlc72O"
	  ],
	  "mode": "entity",
	  "options": {
	    "line_separator": "_\n"
    }
  },
  "metadata": {
    "entities": {
      "handler": "gsheet",
      "source": "https://docs.google.com/spreadsheets/d/1u7d8ntBF5Wg68G33zgiXPZZTvrVUNRLbCuQXttY4wjY/edit?usp=sharing"
      },
    "contacts" : {
      "handler": "gsheet",
      "source": "https://docs.google.com/spreadsheets/d/1DtGR8cHAkro12DOFZn40cehfU9LoI9l7wVUCHfHH-xY/edit?usp=sharing"
      }
  },
  "software": [
    {
        "id": "Postgis",
        "type": "input",
        "software_type": "dbi",
        "parameters": {
            "drv": "{{DB_DRV}}",
            "user": "{{DB_USER}}",
            "password": "{{DB_PWD}}",
            "host": "{{DB_HOST}}",
            "port": "{{DB_PORT}}",
            "dbname": "{{DB_NAME}}"
        }
  },
    	{
		"id": "CINES-csw",
		"type": "output",
		"software_type": "csw",
		"parameters": {
			"url": "{{GEONETWORK_CSW_URL}}",
			"user": "{{GEONETWORK_USER}}",
			"pwd": "{{GEONETWORK_PASSWORD}}",
			"serviceVersion": "2.0.2",
			"logger": "DEBUG"
		}
	},
    {
        "id": "CINES-geoserver",
        "type": "output",
        "software_type": "geoserver",
        "parameters": {
			"url": "{{GEOSERVER_URL}}",
			"user": "{{GEOSERVER_USER}}",
			"pwd": "{{GEOSERVER_PASSWORD}}",
			"logger": "DEBUG"
        },
		"properties" : {
			"workspace": "CTOI",
			"store": "RTTP_database"
		}
    },
		{
		"id": "googledrive",
		"type": "input",
		"software_type": "googledrive",
		"parameters": {
			"email": "{{GMAIL_USER}}",
			"token": ""
		},
		"properties" : {}
	}
  ],
  "actions": [
	{
    "id": "geometa-create-iso-19115",
    "run": true,
	  "options": {
  		"logo": true,
  		"doi": true,
  		"doi_thumbnail": true,
  		"addfeatures": false
	  }
    },
	{
	  "id": "geometa-create-iso-19110",
	  "run": false
	},
	{
	  "id": "ows4R-publish-iso-19139",
	  "run": true
	},
	{
	  "id": "geosapi-publish-ogc-services",
	  "run": true,
	  "options" : {
	    "createWorkspace": true,
	    "createStore": true,
	    "map_thumbnail_template": "{geoserver_url}/ows?service=WMS&version=1.1.0&request=GetMap&layers=G2OI:G2OI_BASE_MAP,{workspace}:{layer}&bbox={bbox}&width=600&height=600&srs=EPSG:{srid}&format=image/png"
	  }
	}
 ]
}